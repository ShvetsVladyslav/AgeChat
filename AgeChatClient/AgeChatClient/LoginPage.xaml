<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AgeChatClient.LoginPage">
    <ContentPage.Content>
        <StackLayout x:Name="mainLayout">
            <Image x:Name="logo"></Image>
            <Label Text="Sign in" FontSize="40" HorizontalOptions="Center" Margin="0, 30, 0, 30"></Label>
            <Entry Placeholder="Login:" x:Name="login" Margin="0, 20, 0, 10" MaxLength="30" WidthRequest ="300" HorizontalOptions="Center"></Entry>
            <Entry Placeholder="Password:" x:Name="password" Margin="0, 10, 0, 20" IsPassword ="True" MaxLength="30" WidthRequest ="300" HorizontalOptions="Center"></Entry>
            <Button Text="Log in" WidthRequest="300" HorizontalOptions="Center" Margin="10" BackgroundColor="LightGreen" CornerRadius="5" Clicked="ButtonLogIn_ClickedAsync"></Button>
            <Button Text="Create new account" WidthRequest="300" HorizontalOptions="Center" Margin="10" BackgroundColor="LightGreen" CornerRadius="5" Clicked="ButtonCreateNew_ClickedAsync"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>