<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AgeChatClient.ChatPage">
    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="messageList" ItemsSource="{Binding messages}" VerticalOptions="Center" SelectionMode="None" SeparatorVisibility="None">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout HorizontalOptions="FillAndExpand">
                                <Label Text="{Binding message}" TextColor="Navy" FontSize="25" HorizontalOptions="StartAndExpand" VerticalOptions="CenterAndExpand" Padding="12"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <StackLayout Orientation="Horizontal" Padding="20">
                <Entry HorizontalOptions="FillAndExpand"></Entry>
                <Button Text="Send"></Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>