<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AgeChatClient.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Welcome to Xamarin.Forms!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Start developing now" x:Name="lbl1" FontSize="Title" Padding="30,10,30,10"/>
        <Button Text="Refresh" Clicked="Button_Clicked"></Button>
        <Button Text="Disconnect" Clicked="btnDisconnect_click"></Button>
        <Editor VerticalOptions="FillAndExpand" x:Name="text" />
        <Button Text="Send" Clicked="btnSend_click"></Button>
    </StackLayout>

</ContentPage>
