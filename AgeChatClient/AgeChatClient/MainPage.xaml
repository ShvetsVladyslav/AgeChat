<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AgeChatClient.MainPage">

    <StackLayout>
        <StackLayout Orientation="Horizontal" Padding="15" HorizontalOptions="End">
            <Label Text="" x:Name="labelUsername" FontSize="20" VerticalTextAlignment="Center"/>
            <Button Text="Sign out" FontSize="15" BackgroundColor="LightGreen" Clicked ="ButtonLogout_Clicked"></Button>
            <Button Text="Exit" FontSize="15" BackgroundColor="LightGreen" Clicked ="ButtonExit_Clicked"></Button>
        </StackLayout>
        <ListView ItemsSource="{Binding userCollection}"></ListView>
    </StackLayout>

</ContentPage>
